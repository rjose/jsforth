#============================================================================
# rforth Makefile
#============================================================================

#-------------------------------------------------------------------------------
# "help" is the default target
#-------------------------------------------------------------------------------
default: help


#-------------------------------------------------------------------------------
# Runs flask server
#-------------------------------------------------------------------------------
.PHONY: run
run:
	cd src && python2 api_server.py

#=======================================
# Targets: Misc
#=======================================

#-------------------------------------------------------------------------------
# Prints help message
#-------------------------------------------------------------------------------
.PHONY: help
help:
	@echo -e "\njsforth Make Targets"

	@echo -e "\trun:\t\tRuns flask web server"
	@echo -e "\thelp:\t\tShows this message"


