#============================================================================
# rforth Makefile
#============================================================================

#-------------------------------------------------------------------------------
# "help" is the default target
#-------------------------------------------------------------------------------
default: help


#-------------------------------------------------------------------------------
# Runs harness server
#-------------------------------------------------------------------------------
.PHONY: run_server
run_server:
	python2 -m SimpleHTTPServer 8000

#=======================================
# Targets: Misc
#=======================================

#-------------------------------------------------------------------------------
# Prints help message
#-------------------------------------------------------------------------------
.PHONY: help
help:
	@echo -e "\njsforth Make Targets"

	@echo -e "\trun_server:\t\tRuns simple web server"
	@echo -e "\thelp:\t\tShows this message"


